load("@rules_cc//cc:defs.bzl", "cc_library", "cc_binary")
load("@fly//scripts/bazel/rules:glslang.bzl", "glsl_shader", "glsl_library")
load("@fly//scripts/bazel/rules:common.bzl", "copy_vulkan_layers", "copy_molten_vk")
load("@fly//scripts/bazel/rules:copy_files_to_directory.bzl", "copy_files_to_directory")

copy_vulkan_layers()
copy_molten_vk()

copy_files_to_directory(
    name = "copy_scene_data",
    srcs = [
        "@splat_sample_scenes//:garden.splat",
        "@splat_sample_scenes//:stump.splat",
        "@splat_sample_scenes//:bicycle.splat",
        "@splat_sample_scenes//:truck.splat",
        "@splat_sample_scenes//:nike.splat",
        "@splat_sample_scenes//:plush.splat",
        "@splat_sample_scenes//:room.splat",
        "@splat_sample_scenes//:train.splat",
        "@splat_sample_scenes//:treehill.splat",
    ],
    output_directory = ".",
)

glsl_library(
    name = "radix_sort_common",
    hdrs = [
        "radix_sort_common.glsl",
    ],
    visibility = ["//visibility:public"]
)

glsl_shader(
    name = "cull.comp.spv",
    src = "cull.comp",
    deps = [
        "//demos/common:glsl_bindless",
        ":radix_sort_common",
    ],
)

glsl_shader(
    name = "write_indirect_dispatch.comp.spv",
    src = "write_indirect_dispatch.comp",
    deps = [
        "//demos/common:glsl_bindless",
        ":radix_sort_common",
    ],
)

glsl_shader(
    name = "copy.comp.spv",
    src = "copy.comp",
    deps = [
        "//demos/common:glsl_bindless",
        ":radix_sort_common",
    ],
)

glsl_shader(
    name = "radix_count_histogram.comp.spv",
    src = "radix_count_histogram.comp",
    deps = [
        "//demos/common:glsl_bindless",
        ":radix_sort_common",
    ],
)

glsl_shader(
    name = "radix_scan.comp.spv",
    src = "radix_scan.comp",
    deps = [
        "//demos/common:glsl_bindless",
        ":radix_sort_common",
    ],
)

glsl_shader(
    name = "radix_sort.comp.spv",
    src = "radix_sort.comp",
    deps = [
        "//demos/common:glsl_bindless",
        ":radix_sort_common",
    ],
)

glsl_shader(
    name = "splat.vert.spv",
    src = "splat.vert",
    deps = [
        "//demos/common:glsl_bindless",
    ],
)

glsl_shader(
    name = "splat.frag.spv",
    src = "splat.frag",
    deps = [
        "//demos/common:glsl_bindless",
    ],
)

cc_binary(
    name = "app",
    srcs = [
        "main.cpp",
    ],
    includes = [
        "radix_sort_common.glsl"
    ],
    deps = [
        "//src/rhi:context",
        "//demos/common:scene",
        "//demos/common:simple_camera_fps",
    ],
    data = [
        ":cull.comp.spv",
        ":write_indirect_dispatch.comp.spv",
        ":copy.comp.spv",
        ":radix_count_histogram.comp.spv",
        ":radix_scan.comp.spv",
        ":radix_sort.comp.spv",
        ":splat.vert.spv",
        ":splat.frag.spv",
        ":copy_scene_data",
    ] + select({
        "@fly//scripts/bazel/build_type:release": [
        ],
        "//conditions:default": [
            ":copy_vulkan_validation_layer",
        ],
    }) + select({
        "@platforms//os:osx": [
            ":copy_molten_vk",
	],
        "//conditions:default": [],
    }),
)
